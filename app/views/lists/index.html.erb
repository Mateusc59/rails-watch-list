<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card mt-5">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movie_url%>)">
          <%= link_to list.name, list_path(list)%>
          <%= link_to "+ add movie to the list", new_list_bookmark_path(list),class:"btn btn-primary mt-2" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "create list", new_list_path,class:"btn btn-primary m-3" %>
</div>
